<script>
  $(document).ready(function() {
      if ($('.modal-dialog').length == 0) {
          $('form > input#login').focus();
      }
  });
</script>
<%= form_tag user_login_path do %>
    <%= text_field_tag :login, params[:login], placeholder: 'Login' %>
    <%= password_field_tag :password, nil, placeholder: 'Hasło' %>
    <label><%= check_box_tag :remember_me, 1, params[:remember_me] %>Zapamiętaj mnie</label>
    <%= submit_tag 'Zaloguj', class: 'button button-success' %>
<% end %>