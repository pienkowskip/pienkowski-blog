<!DOCTYPE html>
<html>
<head>
  <title>Administracja &ndash; Paweł Pieńkowski</title>
  <%= render partial: 'layouts/head', locals: {layout: 'admin'} %>
</head>
<body>
<ul id="navbar" class="inline-list">
  <li><%= link_to admin_root_path do %><span class="glyphicon glyphicon-home"></span><% end %></li>
  <li class="dropdown">
    <%= link_to raw('Wpisy <b class="caret"></b>'), '#', class: 'dropdown-toggle' %>
    <ul class="dropdown-menu">
      <li><%= link_to 'Lista', admin_posts_path %></li>
      <li><%= link_to 'Nowy wpis', new_admin_post_path %></li>
      <li><%= link_to 'Tagi', '#' %></li>
      <li><%= link_to 'Kategorie', admin_categories_path %></li>
    </ul>
  </li>
  <li class="dropdown">
    <%= link_to raw('Treści <b class="caret"></b>'), '#', class: 'dropdown-toggle' %>
    <ul class="dropdown-menu">
      <li><%= link_to 'Lista', '#' %></li>
      <li><%= link_to 'Nowa treść', '#' %></li>
    </ul>
  </li>
  <li><%= link_to 'Biblioteka mediów', '#' %></li>
  <li class="dropdown">
    <%= link_to raw('Ustawienia <b class="caret"></b>'), '#', class: 'dropdown-toggle' %>
  </li>
  <li class="pull-right"><%= link_to 'Wyloguj', user_logout_path %></li>
</ul>
<div id="content">
  <% if content_for? :validation_errors %>
      <%= yield :validation_errors %>
  <% end %>
  <%= yield %>
</div>
<% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: "dialog-content #{name}-dialog" %>
<% end %>
</body>
</html>