<title>
  <% if content_for?(:subtitle) %>
      <%= yield(:subtitle) %> &ndash;
  <% end %>
  Paweł Pieńkowski
</title>
<%= favicon_link_tag '/images/icons/site.png', type: 'image/png' %>

<%
   dependencies = [
           'application',
           'layouts/' + layout,
           params[:controller]]
%>
<%= stylesheet_link_tag *dependencies, media: 'all' %>

<% dependencies.pop() %>
<%= javascript_include_tag *dependencies %>

<script type="text/javascript">
    I18n.defaultLocale = '<%= I18n.default_locale %>';
    I18n.locale = '<%= I18n.locale %>';
</script>

